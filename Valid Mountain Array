class Solution {
public:
    bool validMountainArray(vector<int>& a) {
        int n=a.size();
        if(n<3){
            return false;
        }
        int i=0;
        if(a[i]>=a[i+1]){
            return false;
        }
        int flag1=0,flag2=0;
        while((i<n-1) && (a[i]<a[i+1])){
            flag1=1;
            i++;
        }
        while((i<n-1) && a[i]>a[i+1]){
            flag2=1;
            i++;
        }
        if((i==n-1) && (flag1==1) && (flag2==1)){
            return true;
        }
        return false;
    }
};
