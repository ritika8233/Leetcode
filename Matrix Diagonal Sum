class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        int n=mat.size();
        if(n==1){
            return mat[0][0];
        }
        int ans=0;
        int sum=n-1;
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                if((i-j)==0){
                    ans+=mat[i][j];
                }else if((i+j)==sum){
                    ans+=mat[i][j];
                }
            }
        }
        return ans;
    }
};
