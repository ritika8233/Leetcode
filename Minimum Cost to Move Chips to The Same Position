class Solution {
    public int minCostToMoveChips(int[] a) {
        int z = 0;
        int o = 0;

        for(int i = 0 ; i < a.length;i++){
            if(a[i]%2 == 0){
                z++;
            }
            else{
                o++;
            }
        }

        return Math.min(z,o);
    }
}
