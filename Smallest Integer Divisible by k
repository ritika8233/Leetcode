class Solution {
public:
    int smallestRepunitDivByK(int k) {
        if(k==1){
            return 1;
        }
        if((k%2==0)||(k%5==0)){
            return -1;
        }
        int num=1,l=1;
        for(int i=1;i<=k;i++){
            if((num%k)==0){
                return l;
            }
            l++;
            num=(num*10+1)%k;
        }
        return -1;
    }
};
