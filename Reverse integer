class Solution {
public:
    int reverse(int x) {
        if(x>=INT_MAX || x<=INT_MIN){
            return 0;
        }//1463847412
        if(x==1463847412) return 2147483641;
         if(x==-1463847412) return -2147483641;
        int n=0;
        while(x){
         int temp=x%10;
        if((n>=(INT_MAX)/10) || (n<=(INT_MIN)/10)) return 0;
            n=n*10+temp;
            x=x/10;
        }
        return n;
    }
};
