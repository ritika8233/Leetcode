class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        if(!head)return head;
        if(!head->next)return head;
        ListNode *dummy = new ListNode();
        ListNode *temp = dummy;
        ListNode *curr = head;
        ListNode *prev = NULL;
        while(curr){
            int flag = 0;
            prev = NULL;
            while(curr->next && (curr->val == curr->next->val)){
                flag = 1;
                prev = curr;
                cout<<curr->val;
                curr = curr->next;
            }
            if(prev && prev->val == curr->val){
            curr = curr->next;
            }
            if(curr){
             if(flag == 0){
                 ListNode *t = new ListNode(curr->val);
            temp->next = t;
            temp = temp->next;
            curr = curr->next;
              }
            }
        }
        return dummy->next;
    }
};
