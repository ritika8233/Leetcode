class Solution {
public:
    int maxSubArray(vector<int>& num) {
        int n=num.size();
        if(n==1){
            return num[0];
        }
        vector<int> dp(n+1,-1);
        int ans=INT_MIN;
        dp[0]=num[0];
        ans=max(ans,dp[0]);
        for(int i=1;i<n;i++){
            dp[i]=num[i];
            if(dp[i-1]>0){
                dp[i]+=dp[i-1];
            }
            ans=max(ans,dp[i]);
        }
        return ans;
    }
};
